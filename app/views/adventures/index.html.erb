<h1>Listing adventures</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Male</th>
    <th>Route</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @adventures.each do |adventure| %>
  <tr>
    <td><%= adventure.name %></td>
    <td><%= adventure.male %></td>
    <td><%= adventure.route %></td>
    <td><%= link_to 'Show', adventure, :class => 'button tiny secondary' %></td>
    <td><%= link_to 'Edit', edit_adventure_path(adventure) %></td>
    <td><%= link_to 'Destroy', adventure, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Adventure', new_adventure_path, :class => 'button' %>
