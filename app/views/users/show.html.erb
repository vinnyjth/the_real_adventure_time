<p id="notice"><%= notice %></p>
<h1 class="text-center">
	<b>  <%= @user.name %></b>

</h1>
<div class="row">
	<div class="small-9 column">
		<p>
			<%= image_tag avatar_url(@user), :class => "left", :style => "margin:0px 25px;" %>	
			<% begin %>

			<%= @user.profile.bbcode_to_html.html_safe %>

			<% rescue %>
			<%= @user.profile %>


			<% end %>
		</p>
		<ul>
			<% @user.groups.each do |group| %>
				<li><%= group.title %></li>
			<% end %>
		</ul>
		<a href="#" data-dropdown="groups" class="button dropdown">Add to group</a>
	</div>

	<div class="small-2 column panel" style="margin-right: 10px;">
		<%= @user.name %>'s pages
		<% @user.pages.each do |page| %>
		<%= link_to page.title, page, :class => 'small button keep-white' %>
		<br />
		<% end %>
	</div>
	<ul id="groups" class="f-dropdown">
	<% if @user != current_user %>
	<%= form_tag({:controller => "users", :action => "add_user_to_group"}, :method => "post") %>
		<% current_user.groups.each do |group| %>
			<li><%= radio_button_tag(:group, group.id) %></li>
			<li><%= label_tag(group.title) %></li>
		<% end %>
		<%= hidden_field_tag(:user, @user.id) %>
		<li> <%= submit_tag("Submit") %> </li>
	<% end %>
	</ul>
</div>