<table>
  <tr>
    <th>Name</th>
    <th>Avatar</th>
    <th></th>
    <% if current_user.admin? %>
    <th></th>
    <th></th>
    <% end %>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= image_tag avatar_url(user) %></td>
    <td><%= link_to 'Show', user %></td>
    <% if current_user.admin? %>
    <td><%= link_to 'Edit', edit_user_path(page) %></td>
    <td><%= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
    <% end %>
  </tr>
  <% end %>
</table>