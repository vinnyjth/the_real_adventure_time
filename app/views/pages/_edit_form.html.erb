<%= tinymce_assets %>
<%= form_for(@page) do |f| %>

<%= render 'form', :f => f %>
<%= f.fields_for :group do |group_builder| %>

  <% current_user.groups.each do |group| %>
  <%= radio_button_tag :group_id, group.id %> <%= group.title %>

<% end %>
<% end %>
  <% if !@page.reverse_pages.empty? %>
    <%= f.fields_for :paths do |path_builder| %>
      <% @page.reverse_pages do |page| %>
        The statement that links <%= label_tag page.title %> to this page
        <%= path_builder.text_field :question %>
      <% end %>
    <% end %> 
  <% end %>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
