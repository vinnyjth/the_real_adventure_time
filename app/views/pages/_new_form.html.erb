<%= tinymce_assets %>
<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :class => "tinymce", :rows => 200, :cols => 120 %>
    <%= tinymce %>
  </div>
  <div class="field">
    <%= f.label :stamp %><br />
    <%= f.text_field :stamp %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  
    <%= f.fields_for :paths do |builder| %>
      <div class="field">
        <%= builder.label :question %><br />
        <%= builder.text_field :question %>
        <%= builder.hidden_field :page_from_id, :value => @root.id %>
      </div>
    <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
