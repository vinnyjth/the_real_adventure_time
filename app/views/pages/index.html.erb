<h1>Listing pages</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Date</th>
    <th>Stamp</th>
    <th>Title</th>
    <th>Related Pages </th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.content %></td>
    <td><%= page.date %></td>
    <td><%= page.stamp %></td>
    <td><%= page.title %></td>
    <td>
    <% page.pages.each do |related_page| %>
      <%= related_page.title %>
    <% end %>
    </td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

