<h1>Listing pages</h1>
<%= form_tag pages_path, :method => 'get', :id => "pages_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div id="pages"><%= render 'pages' %></div>
<%= paginate @pages %>

<br />

<%= link_to 'New Page', new_page_path %>
